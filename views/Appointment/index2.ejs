    </div>
    <div class="main_content">
       
   <div class="nav" style="display: flex;justify-content:right;gap:15px;align-items:center;padding-right:25px">
   
    <div class="pro-img">
        <a style="font-size: 30px;" href="/profile"><img src="/images/<%= user.image %>" alt=""></a>
   
     
    </div>
    <div>
          <a style="background-color: white; text-decoration:none; border-radius:5px; height:25px; text-align:center;padding:5px;color:red;" href="/logout"><i class="fa-solid fa-right-from-bracket"></i>  Logout</a>

    </div>
  </div>
<div class="container">
    <!-- Upcoming Appointments Section -->
  <div class="section1">
    <div id="appointments-section">
       

        <h2>Your Booked Appointments</h2>
       
    <div class="bookdata">
        <% if (mailDataList.length > 0) { %>
            <% mailDataList.forEach(mail => { %>
                <div class="card">
                    <div class="card-body">
                        <!-- Render the HTML content -->
                        <%- mail.html %>
                    </div>
                    <div class="card-footer">
                        <b>Sent At:</b> <%= new Date(mail.sentAt).toLocaleString() %>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="no-data">No Mail Data Found</div>
        <% } %>
       </div>
    </div>

    <!-- Payment Records Section -->
 
  </div>
    <!-- Client Chat Section -->
    <div id="chat-section">
        <h2>Client Chat</h2>
        <div id="chat-container">
            <!-- Chat messages will appear here -->
        </div>
        <input type="text" id="chat-input" placeholder="Type a message..." />
        <button id="send-button">Send</button>
    </div>
</div>

<div class="meeting-section">
    <div id="create-meetings">
        <div>
            <h2>Create Meeting</h2>
            <form id="meeting-form">
                <input type="text" id="title" placeholder="Meeting Title" required />
                <input type="datetime-local" id="date" required />
                <input type="text" id="link" placeholder="Meeting Link" required />
                <select id="students" multiple required></select>
                <button type="submit">Create Meeting</button>
            </form>
        </div>
    
        <div>
            <h2>Upcoming Meetings</h2>
        <div id="teacher-upcoming-meetings"></div>
        </div>
       
    </div>
</div>






   

    



