<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join Zoom Meeting</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(rgba(0,0,0,0.85),rgba(0,0,0,0.65)),url(/images/meeting.jpg);
            background-size: cover;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        h1{
            color: white;
        }
        .container {
            background: rgba(39, 39, 39, 0.305);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 5px rgba(255, 255, 255, 0.2);
            text-align: center;
            width: 90%;
            max-width: 600px;
        }
        iframe {
            margin-top: 20px;
            width: 100%;
            height: 500px;
            border: none;
            border-radius: 8px;
        }
        input[type="text"] {
            width: 80%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.3s;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Join Your Zoom Meeting</h1>
        <form id="zoomForm">
            <input type="text" id="zoomLink" placeholder="Enter your Zoom meeting link" required />
            <button type="submit">Join Meeting</button>
        </form>
        <iframe id="zoomIframe" style="display: none;"></iframe>
    </div>

    <script>
        const zoomForm = document.getElementById('zoomForm');
        const zoomIframe = document.getElementById('zoomIframe');

        zoomForm.addEventListener('submit', (event) => {
            event.preventDefault();

            // Get the Zoom meeting link from the input field
            const zoomLink = document.getElementById('zoomLink').value.trim();

            if (zoomLink) {
                // Validate the URL
                if (!zoomLink.startsWith("https://")) {
                    alert("Please enter a valid Zoom meeting link starting with 'https://'.");
                    return;
                }

                // Embed the meeting link in the iframe
                zoomIframe.src = zoomLink.replace("/j/", "/wc/join/"); // Switch to the web client
                zoomIframe.style.display = "block";
            } else {
                alert("Please enter a Zoom meeting link.");
            }
        });
    </script>
</body>
</html>
